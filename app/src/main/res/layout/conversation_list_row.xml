<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dip" >

    <View
        android:id="@+id/convo_color"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        android:background="@drawable/circle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/convo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conversation Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/convo_color" />

    <TextView
        android:id="@+id/convo_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[time]"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/convo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The last message here"
        android:textSize="14sp"
        android:layout_below="@+id/convo_name"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/convo_name"
        app:layout_constraintLeft_toRightOf="@+id/convo_color" />
</android.support.constraint.ConstraintLayout>